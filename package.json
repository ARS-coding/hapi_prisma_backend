{
  "name": "app_nation_case_study_backend",
  "version": "1.0.0",
  "description": "AppNation's case study. Monolithic NodeJS backend application using HapiJS and Prisma .",
  "license": "ISC",
  "scripts": {
    "build": "tsc",
    "start": "node ./src/index.js",
    "dev": "ts-node-dev --respawn ./src/index.ts",
    "test": "echo \"Error: no test specified\" && exit 1",
    "postgres:start": "docker-compose up -d",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "complete-local-setup": "pnp install &&m pnpm postgres:start && pnpm prisma:generate && pnpm prisma:migrate && pnpm dev"
  },
  "dependencies": {
    "@hapi/boom": "^10.0.1",
    "@hapi/hapi": "^21.3.10",
    "@prisma/client": "5.17.0",
    "bcrypt": "^5.1.1",
    "hapi-auth-bearer-token": "^8.0.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/hapi-auth-bearer-token": "^6.1.8",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.14.12",
    "prisma": "^5.17.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.5.4"
  }
}
